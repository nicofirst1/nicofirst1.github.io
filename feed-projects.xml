---
layout: none
permalink: /feed-projects.xml
---
<?xml version="1.0" encoding="UTF-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  {% assign projects_collection = site.collections | where: 'label', 'projects' | first %}
  {% if projects_collection %}
    {% assign project_docs = projects_collection.docs %}
  {% else %}
    {% assign project_docs = site.projects %}
  {% endif %}
  {% assign project_docs = project_docs | where_exp: 'doc', 'doc.published != false' %}
  {% assign project_docs = project_docs | where_exp: 'doc', 'doc.draft != true' %}
  {% assign project_docs = project_docs | where_exp: 'doc', 'doc.exclude_from_feed != true' %}
  {% assign project_docs = project_docs | sort: 'date' | reverse %}
  {% assign project_docs = project_docs | slice: 0, 20 %}
  {% assign latest_project = project_docs | first %}
  {% assign feed_updated = site.time %}
  {% if latest_project %}
    {% assign feed_updated = latest_project.date | default: site.time %}
  {% endif %}
  <title>{{ site.title | default: "Website" }} â€“ Projects</title>
  <link href="{{ '/feed-projects.xml' | absolute_url }}" rel="self" />
  <link href="{{ '/' | absolute_url }}" rel="alternate" />
  <updated>{{ feed_updated | date_to_xmlschema }}</updated>
  <id>{{ '/feed-projects.xml' | absolute_url }}</id>
  {% for proj in project_docs %}
    {% assign summary_source = proj.excerpt | default: proj.content %}
    {% assign summary_text = summary_source | strip_html | strip_newlines | replace: '  ', ' ' | strip %}
    <entry>
      <title>{{ proj.title | escape }}</title>
      <link href="{{ proj.url | absolute_url }}" />
      <id>{{ proj.url | absolute_url }}</id>
      <updated>{{ proj.date | date_to_xmlschema }}</updated>
      <author>
        <name>{{ proj.author | default: site.author | default: site.title | escape }}</name>
      </author>
      <summary>{{ summary_text | truncate: 200 | escape }}</summary>
    </entry>
  {% endfor %}
</feed>
